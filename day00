from turtle import*
#we want to paint a house
#step 1 : draw a square
width(5)
speed(30)
color("blue")
forward(400)
left(90)
forward(400)
left(90)
forward(400)
left(90)
forward(100)
color("brown")
left(90)
forward(180)
right(90)
forward(100)
right(90)
forward(180)

penup()
goto(400,400)
pendown()
color("red")
begin_fill()
forward(200)
right(180)
left(120)
forward(200)
end_fill





exitonclick(
